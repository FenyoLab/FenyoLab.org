---
import Layout from "@layouts/Layout.astro";

import selectLectures from "@data/selectLectures.json";
import courses from "@data/courses.json";

interface Lecture {
  title: string;
  date: string;
  link: string;
}

interface Course {
  title: string;
  link: string;
  image: string;
  presenter?: string;
  location: string;
}
---

<Layout title="Teaching">
  <ul class="list-disc list-inside text-sm pl-4 mb-8">
    {
      selectLectures.map((lecture: Lecture) => (
        <li>
          <span>{lecture.title}</span>, <span>{lecture.date}</span>(
          <a
            href={lecture.link}
            target="_blank"
            class="hover:underline hover:text-slate-500"
          >
            Video
          </a>
          )
        </li>
      ))
    }
  </ul>

  <p class="font-bold">Courses</p>
  <ul>
    {
      courses.map((course: Course) => (
        <li class="flex justify-between items-center gap-4 flex-row odd:flex-row-reverse mb-6">
          <img width="120" src={course.image} alt="alt" />
          <p class="text-sm">
            {course?.presenter && <span>{course.presenter}, </span>}
            <a
              href={course.link}
              target="_blank"
              class="font-bold italic hover:underline hover:text-slate-500"
            >
              {course.title}
            </a>
            ,<span>{course.location}</span>
          </p>
        </li>
      ))
    }
  </ul>
</Layout>
