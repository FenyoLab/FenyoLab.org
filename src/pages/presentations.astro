---
import Layout from "@layouts/Layout.astro";

import presentations from "@data/presentations.json";
---

<Layout title="Presentations">
  <div class="flex mb-6">
    <a
      href="/presentations/"
      class="pr-2 font-bold hover:underline hover:text-slate-500"
      >Presentations</a
    >
     |
    <a href="/teaching/" class="px-2 hover:underline hover:text-slate-500"
      >Teaching</a
    > |
  </div>

  <ul>
    {
      presentations.map((presentation) => (
        <li class="flex justify-between items-center gap-4 flex-reverse odd:flex-row-reverse mb-6">
          <img src={presentation.image} alt="alt" />
          <p class="text-sm">
            <Fragment set:html={presentation.authors} />
            <a
              href={presentation.link}
              target="_blank"
              class="font-bold italic"
            >
              {presentation.title}
            </a>
            , {presentation.location}, {presentation.date}.
          </p>
        </li>
      ))
    }
  </ul>
</Layout>
