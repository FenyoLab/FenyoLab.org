---
interface Props {
  image: string;
  firstName: string;
  lastName: string;
  position: string;
  suffix?: string;
  email?: string;
}

const { image, firstName, lastName, position, suffix, email } = Astro.props;
---

<li class="flex gap-2 items-center pl-4 h-32">
  <div class="h-32 overflow-hidden">
    <img width="107" src={image} alt="alt" />
  </div>
  <div>
    <div class="font-bold leading-tight">
      {firstName}
      {lastName}{" "}
      {suffix && `, ${suffix}`}
    </div>
    <div class="text-sm">{position}</div>
  </div>
</li>
