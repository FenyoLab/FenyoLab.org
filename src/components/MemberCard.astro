---
interface Props {
  image: string;
  firstName: string;
  lastName: string;
  position: string;
  suffix?: string;
  projectDesc?: string;
  summary?: boolean;
}

const {
  image,
  firstName,
  lastName,
  position,
  suffix,
  projectDesc,
  summary = false,
} = Astro.props;
---

{
  !summary ? (
    <li class="flex flex-col md:flex-row items-center mb-4 rounded-lg bg-stone-100">
      <div class="w-48 overflow-hidden flex-none">
        <div class="flex flex-col mt-4 md:mt-0 justify-center rounded-lg md:rounded-r-none w-48 bg-stone-300 items-center p-4">
          <img
            src={image}
            alt="alt"
            class="h-24 mb-4 ring-2 ring-white rounded-lg object-scale-down"
          />
          <div class="font-bold text-sm leading-tight">
            <span>{`${firstName} ${lastName}`}</span>
            {suffix && `, ${suffix}`}
          </div>
          <div class="text-sm text-center">{position}</div>
        </div>
      </div>
      <div class="p-4">{projectDesc}</div>
    </li>
  ) : (
    <li class="w-full md:w-auto">
      <div class="mx-auto md:mx-0 flex flex-col rounded-lg h-52 w-52 w-52 bg-stone-300 items-center p-4">
        <img
          src={image}
          alt="alt"
          class="h-24 mb-4 ring-2 ring-white rounded-lg object-scale-down"
        />
        <div class="font-bold text-sm leading-tight text-center">
          <span>{`${firstName} ${lastName}`}</span>
          {suffix && `, ${suffix}`}
        </div>

        <div class="text-sm font-normal text-center">{position}</div>
      </div>
    </li>
  )
}
